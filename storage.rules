rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // PDF uploads - public read, admin write only
    match /pdfs/{fileName} {
      allow read: if true;
      // Replace ADMIN_UID_HERE with actual admin user IDs from Firebase Auth
      allow write: if request.auth != null && 
                   request.auth.uid in ['ADMIN_UID_1', 'ADMIN_UID_2'];
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
